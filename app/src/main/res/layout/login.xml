<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sduTurkuaz">

    <ImageView
        android:id="@+id/loginPic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src = "@drawable/avatar2"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="90dp"
        />
    <EditText
        android:id="@+id/eMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="SDU E-Posta"
        android:textColorHint="@color/sduText"
        android:background="@color/sduBeyaz"
        android:height="40dp"
        android:maxLines="1"
        android:lines="1"
        android:layout_gravity="end"
        android:inputType="text"
        android:padding="10dp"

       />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Parola"
        android:textColorHint="@color/sduText"
        android:background="@color/sduBeyaz"
        android:maxLines="1"
        android:height="40dp"
        android:inputType="textPassword"
        android:padding="10dp"
    />
<Button
    android:id="@+id/btnLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Giriş"
    android:layout_marginTop="20dp"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:background="@color/sduYesil"
    android:textColor="@color/sduAcikSari"/>

<TextView
   android:id="@+id/tvPassword"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:textColor="@color/sduAcikSari"
   android:text="Şifrenizi mi Unuttunuz ?"
   android:textStyle="bold"
   android:gravity="center"
   android:paddingTop="20dp"
   />


    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sdu Kampüs için kayıt ol"
        android:layout_marginTop="100dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:background="@color/sduYesil"
        android:textColor="@color/sduAcikSari"/>
</LinearLayout>